extends layoutgen

block content
  h1(align='center')= title
  .uk-divider-icon  
  table.uk-table.uk-table-small.uk-table-striped
   caption
    thead
      tr
        th Nama
        th Tadika
        th Kelas
        th Umur
      tfoot
      each budak in budak_list
        tr
          td 
            - var url = 'http://localhost:3000/kids/' + budak.id
            a(href=url) #{budak.namaPendaftaranTadika}
          td #{budak.namaTaskaTadikaPendaftaranTadika}
          td #{budak.kelasPendaftaranTadika}
          td #{budak.umurPendaftaranTadika}
      
   